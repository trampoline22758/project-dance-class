{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,

  "headers": [
    {
      "source": "/(.*)\\.(woff2|woff|ttf|eot|otf)$",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)\\.(css|js)$",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)\\.(png|jpg|jpeg|gif|webp|svg|ico|avif)$",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=2592000"
        }
      ]
    },
    {
      "source": "/(.*)\\.(html)$",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/(manifest\\.webmanifest|site\\.webmanifest)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/sw\\.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store"
        }
      ]
    },
    {
      "source": "/(robots\\.txt|sitemap\\.xml)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=63072000; includeSubDomains; preload"
        },
        {
          "key": "Cross-Origin-Opener-Policy",
          "value": "same-origin"
        },
        {
          "key": "Cross-Origin-Resource-Policy",
          "value": "same-site"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; frame-ancestors 'none'; img-src 'self' data: https:; font-src 'self' https://fonts.gstatic.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; script-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com https://unpkg.com https://app.embed.im; connect-src 'self' https://www.google-analytics.com https://www.googletagmanager.com"
        }
      ]
    }
  ],

  "rewrites": [
    {
      "source": "/tap",
      "destination": "/tap-dance-classes"
    },
    {
      "source": "/ballet",
      "destination": "/ballet-dance-classes"
    },
    {
      "source": "/jazz",
      "destination": "/jazz-dance-classes"
    },
    {
      "source": "/hip-hop",
      "destination": "/hip-hop-dance-classes"
    },
    {
      "source": "/lyrical",
      "destination": "/lyrical-dance-classes"
    },
    {
      "source": "/contemporary",
      "destination": "/contemporary-dance-classes"
    },
    {
      "source": "/pom-poms",
      "destination": "/pom-poms-classes"
    },
    {
      "source": "/tumbling",
      "destination": "/tumbling-classes"
    },
    {
      "source": "/acrobatics",
      "destination": "/acrobatics-classes"
    },
    {
      "source": "/aerial",
      "destination": "/aerial-classes"
    },
    {
      "source": "/competition",
      "destination": "/competition-teams"
    },

    /* map essentials/ assets to root paths so your links keep working */
    {
      "source": "/robots.txt",
      "destination": "/essentials/robots.txt"
    },
    {
      "source": "/sitemap.xml",
      "destination": "/essentials/sitemap.xml"
    },
    {
      "source": "/registration-form.pdf",
      "destination": "/essentials/registration-form.pdf"
    },
    {
      "source": "/schedule.pdf",
      "destination": "/essentials/schedule.pdf"
    }
  ],

  "redirects": [
    {
      "source": "/home",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/index.html",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/:path*.html",
      "destination": "/:path*",
      "permanent": true
    },

    {
      "source": "/tap-dance-classes",
      "destination": "/tap",
      "permanent": true
    },
    {
      "source": "/ballet-dance-classes",
      "destination": "/ballet",
      "permanent": true
    },
    {
      "source": "/jazz-dance-classes",
      "destination": "/jazz",
      "permanent": true
    },
    {
      "source": "/hip-hop-dance-classes",
      "destination": "/hip-hop",
      "permanent": true
    },
    {
      "source": "/lyrical-dance-classes",
      "destination": "/lyrical",
      "permanent": true
    },
    {
      "source": "/contemporary-dance-classes",
      "destination": "/contemporary",
      "permanent": true
    },
    {
      "source": "/pom-poms-classes",
      "destination": "/pom-poms",
      "permanent": true
    },
    {
      "source": "/tumbling-classes",
      "destination": "/tumbling",
      "permanent": true
    },
    {
      "source": "/acrobatics-classes",
      "destination": "/acrobatics",
      "permanent": true
    },
    {
      "source": "/aerial-classes",
      "destination": "/aerial",
      "permanent": true
    },
    {
      "source": "/competition-teams",
      "destination": "/competition",
      "permanent": true
    }
  ]
}
