{
  "version": 2,
  "cleanUrls": true, // "/about" instead of "/about.html"
  "trailingSlash": false, // keep "/tap", not "/tap/"

  "headers": [
    // Fonts: cache hard for 1 year (immutable)
    {
      "source": "/(.*)\\.(woff2|woff|ttf|eot|otf)$",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },

    // CSS/JS: cache hard for 1 year (works well with hashed filenames)
    {
      "source": "/(.*)\\.(css|js)$",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },

    // Images: 30 days (bump to 1y+immutable if you fingerprint)
    {
      "source": "/(.*)\\.(png|jpg|jpeg|gif|webp|svg|ico|avif)$",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=2592000"
        }
      ]
    },

    // HTML: always revalidate so deploys show instantly
    {
      "source": "/(.*)\\.(html)$",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },

    // PWA bits: do NOT cache aggressively
    {
      "source": "/(manifest\\.webmanifest|site\\.webmanifest)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/sw\\.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store"
        }
      ]
    },

    // SEO helpers
    {
      "source": "/(robots\\.txt|sitemap\\.xml)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },

    // Security headers (CSP tuned for your stack: Google Fonts, cdnjs, unpkg, embed.im)
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=63072000; includeSubDomains; preload"
        },
        {
          "key": "Cross-Origin-Opener-Policy",
          "value": "same-origin"
        },
        {
          "key": "Cross-Origin-Resource-Policy",
          "value": "same-site"
        },

        // Keep 'unsafe-inline' because your pages include inline scripts/styles.
        // We removed 'unsafe-eval' (safer). Add other hosts here if your console shows CSP blocks.
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; frame-ancestors 'none'; img-src 'self' data: https:; font-src 'self' https://fonts.gstatic.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; script-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com https://unpkg.com https://app.embed.im; connect-src 'self' https://www.google-analytics.com https://www.googletagmanager.com"
        }
      ]
    }
  ],

  // --- Rewrites: keep SHORT URLs in the browser, serve LONG paths under the hood ---
  // Example: visiting /tap serves the content from /tap-dance-classes, but the URL stays /tap
  "rewrites": [
    {
      "source": "/tap",
      "destination": "/tap-dance-classes"
    },
    {
      "source": "/ballet",
      "destination": "/ballet-dance-classes"
    },
    {
      "source": "/jazz",
      "destination": "/jazz-dance-classes"
    },
    {
      "source": "/hip-hop",
      "destination": "/hip-hop-dance-classes"
    },
    {
      "source": "/lyrical",
      "destination": "/lyrical-dance-classes"
    },
    {
      "source": "/contemporary",
      "destination": "/contemporary-dance-classes"
    },
    {
      "source": "/pom-poms",
      "destination": "/pom-poms-classes"
    },
    {
      "source": "/tumbling",
      "destination": "/tumbling-classes"
    },
    {
      "source": "/acrobatics",
      "destination": "/acrobatics-classes"
    },
    {
      "source": "/aerial",
      "destination": "/aerial-classes"
    },
    {
      "source": "/competition",
      "destination": "/competition-teams"
    },
    {
      "source": "/summer",
      "destination": "/summer"
    } // keep if your route is already /summer
  ],

  // --- Redirects: old LONG URLs 301 to SHORT canonical URLs (SEO-friendly) ---
  "redirects": [
    {
      "source": "/home",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/index.html",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/:path*.html",
      "destination": "/:path*",
      "permanent": true
    },

    // canonicalize long slugs to short
    {
      "source": "/tap-dance-classes",
      "destination": "/tap",
      "permanent": true
    },
    {
      "source": "/ballet-dance-classes",
      "destination": "/ballet",
      "permanent": true
    },
    {
      "source": "/jazz-dance-classes",
      "destination": "/jazz",
      "permanent": true
    },
    {
      "source": "/hip-hop-dance-classes",
      "destination": "/hip-hop",
      "permanent": true
    },
    {
      "source": "/lyrical-dance-classes",
      "destination": "/lyrical",
      "permanent": true
    },
    {
      "source": "/contemporary-dance-classes",
      "destination": "/contemporary",
      "permanent": true
    },
    {
      "source": "/pom-poms-classes",
      "destination": "/pom-poms",
      "permanent": true
    },
    {
      "source": "/tumbling-classes",
      "destination": "/tumbling",
      "permanent": true
    },
    {
      "source": "/acrobatics-classes",
      "destination": "/acrobatics",
      "permanent": true
    },
    {
      "source": "/aerial-classes",
      "destination": "/aerial",
      "permanent": true
    },
    {
      "source": "/competition-teams",
      "destination": "/competition",
      "permanent": true
    }
  ]
}
